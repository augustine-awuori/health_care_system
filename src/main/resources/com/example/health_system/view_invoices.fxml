<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.health_system.ViewInvoicesController"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="invoicesTable" layoutX="20" layoutY="20" prefHeight="300" prefWidth="560">
        <columns>
            <TableColumn text="Patient Username" fx:id="usernameColumn" prefWidth="150"/>
            <TableColumn text="Amount" fx:id="amountColumn" prefWidth="150"/>
            <TableColumn text="Payment Mode" fx:id="paymentModeColumn" prefWidth="150"/>
            <TableColumn text="Date" fx:id="dateColumn" prefWidth="150"/>
        </columns>
    </TableView>

    <Button text="Back" layoutX="20" layoutY="340" onAction="#handleBack"/>
</AnchorPane>
